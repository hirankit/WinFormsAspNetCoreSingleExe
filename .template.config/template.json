{
    "$schema": "http://json.schemastore.org/template",
    "author": "Hirankit Tantirapan",
    "classifications": ["Web", "WinForms"],
    "identity": "Zappily.Templates.CSharp.WinFormsAspNetCoreSingleExe",
    "name": "WinForms AspNetCore Single Executable File Template",
    "shortName": "csharp-winforms-aspnetcore-singleexe",
    "tags": {
      "language": "C#",
      "type": "project"
    },
    "sources": [
      {
        "modifiers": [
          {
            "exclude": [
              "**/[Bb]in/**",
              "**/[Oo]bj/**",
              "**/.vs/**",
              "**/.vscode/**",
              ".template.config/**/*",
              "**/*.csproj.user",
              "**/*.suo",
              "**/*.userosscache",
              "**/*.sln.docstates"
            ]
          }
        ]
      }
    ],
    "sourceName": "WinFormsAspNetCoreSingleExe",
    "preferNameDirectory": true,
    "symbols": {
      "AssemblyName": {
        "type": "derived",
        "valueSource": "name",
        "valueTransform": "pascalCase",
        "replaces": "SampleWinFormsAspNetCoreSingleExe"
      }
    },
    "forms" :{
      "titleCase": {
        "identifier": "titleCase"
      },
      "invalidChars": {
        "identifier": "replace",
        "pattern": "([\\-_\\.\\s])",
        "replacement": ""
      },
      "pascalCase": {
        "identifier": "chain",
        "steps": [
          "titleCase",
          "invalidChars"
        ]
      }
    }
  }